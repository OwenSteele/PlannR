@page "/trips/{tripId}"
@attribute [Authorize]

<div class="trip">
    @if (Trip == null)
    {
        <p>Getting trip info..</p>
    }
    else
    {
        <div class="heading">
            <h1>@Trip.Name</h1>
            @*<button @onclick="ShowCreateTripModal"><span>&#43;</span> New</button>*@
        </div>
        <div class="trip-info">
            <div class="dates-locations">
                <div>
                    <div>
                        <span>Starts:</span>
                        <span class="val">@Trip.StartDateTime.ToLongDateString()</span>
                        <button @onclick="ShowEditTripModal">&#9998;</button>
                    </div>
                    <div>
                        <span>From:</span>
                        <span class="val">@(Trip.StartLocation == null ? "No Location Set" : Trip.StartLocation.Name)</span>
                    </div>
                </div>
                <div>
                    <div>
                        <span>Ends:</span>
                        <span class="val">@Trip.EndDateTime.ToLongDateString()</span>
                    </div>
                    <div>
                        <span>At:</span>
                        <span class="val">@(Trip.StartLocation == null ? "No Location Set" : Trip.StartLocation.Name)</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>