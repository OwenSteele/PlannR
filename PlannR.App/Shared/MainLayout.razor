@inherits LayoutComponentBase
<div>
    <div>
        <div class="topnav">
            <NavBar />
        </div>
    </div>
</div>
<AuthorizeView>
    <Authorized>
        <div>
            <div>
                <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
                    <UserNavMenu />
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div hidden="hidden" @onload="CollapseNavMenu"></div>
    </NotAuthorized>
</AuthorizeView>
<div class="@ToggleNavMenuClass">
    <AuthorizeView>
        <Authorized>
            <button class="togglebtn @ToggleNavMenuClass" @onclick="ToggleNavMenu">&#9776;</button>
            <div class="content">
                @Body
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="content-na">
                @Body
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

<div class="footer">
    <Footer />
</div>
